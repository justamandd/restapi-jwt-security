generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:master@localhost:3306/track_funds"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())
  isActive Boolean @default(false)
  transactions Transaction[]
  sessions    Session[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  type        String   // 'income' para ganhos, 'expense' para gastos
  date        DateTime @default(now())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Session {
  id         Int      @id @default(autoincrement())
  userId     Int
  token      String   // O JWT
  isValid    Boolean  @default(true)
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  user User @relation(fields: [userId], references: [id])
}
